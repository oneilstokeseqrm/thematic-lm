{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://thematic-lm.eq.com/schemas/models/codebook/v1/schema.json",
  "title": "Codebook Schema",
  "description": "Schema for the adaptive codebook that evolves with each analysis",
  "type": "object",
  "required": [
    "version",
    "account_id",
    "codes",
    "created_at",
    "updated_at"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "Codebook version identifier (e.g., 'v42')",
      "pattern": "^v\\d+$"
    },
    "account_id": {
      "type": "string",
      "format": "uuid",
      "description": "Account identifier for tenant scoping"
    },
    "codes": {
      "type": "array",
      "description": "Array of codes in the codebook",
      "items": {
        "$ref": "#/definitions/Code"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this codebook version was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this codebook version was last updated"
    }
  },
  "definitions": {
    "Code": {
      "type": "object",
      "required": [
        "code_id",
        "label",
        "quotes",
        "created_at",
        "updated_at",
        "decay_score"
      ],
      "additionalProperties": false,
      "properties": {
        "code_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for this code"
        },
        "label": {
          "type": "string",
          "description": "Short descriptive label for the code",
          "minLength": 1,
          "maxLength": 200
        },
        "quotes": {
          "type": "array",
          "description": "Representative quotes supporting this code",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Quote"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "When this code was first created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "When this code was last updated"
        },
        "decay_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Activity score: 0.0 = inactive, 1.0 = highly active"
        }
      }
    },
    "Quote": {
      "type": "object",
      "required": [
        "quote_id",
        "text",
        "interaction_id",
        "chunk_index",
        "start_pos",
        "end_pos"
      ],
      "additionalProperties": false,
      "properties": {
        "quote_id": {
          "type": "string",
          "description": "Quote identifier matching format: interaction_id:ch_{chunk_index}:{start_pos}-{end_pos} or interaction_id:msg_{message_index}:ch_{chunk_index}:{start_pos}-{end_pos} for email threads",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}:(msg_\\d+:)?ch_\\d+:\\d+-\\d+$"
        },
        "text": {
          "type": "string",
          "description": "The actual quote text extracted from the interaction",
          "minLength": 1
        },
        "interaction_id": {
          "type": "string",
          "format": "uuid",
          "description": "Source interaction identifier"
        },
        "chunk_index": {
          "type": "integer",
          "minimum": 0,
          "description": "Chunk index within the interaction (0-based)"
        },
        "start_pos": {
          "type": "integer",
          "minimum": 0,
          "description": "Start position in original text (Unicode code-point offset)"
        },
        "end_pos": {
          "type": "integer",
          "minimum": 0,
          "description": "End position in original text (Unicode code-point offset)"
        }
      }
    }
  }
}